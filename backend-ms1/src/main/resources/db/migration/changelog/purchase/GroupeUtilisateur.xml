<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="groupe_utilisateur">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>

        <column name="groupe_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="utilisateur_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="groupe_utilisateur"
              baseColumnNames="groupe_id"
              referencedTableName="groupe"
              referencedColumnNames="id"
              constraintName="fk_groupe_utilisateur_groupe"/>
      <addForeignKeyConstraint
              baseTableName="groupe_utilisateur"
              baseColumnNames="utilisateur_id"
              referencedTableName="utilisateur"
              referencedColumnNames="id"
              constraintName="fk_groupe_utilisateur_utilisateur"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="groupe_utilisateur_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/purchase/GroupeUtilisateur.csv"
            tableName="groupe_utilisateur">
      <column name="id" type="NUMERIC"/>
        <column name="groupe" type="BIGINT"/>
        <column name="utilisateur" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
