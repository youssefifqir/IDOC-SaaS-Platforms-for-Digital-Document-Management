<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="entite_administrative">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="code" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>
        <column name="libelle" type="VARCHAR(500)"/>

        <column name="chef_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="entite_administrative_type_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="abonne_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="entite_administrative"
              baseColumnNames="chef_id"
              referencedTableName="chef"
              referencedColumnNames="id"
              constraintName="fk_entite_administrative_chef"/>
      <addForeignKeyConstraint
              baseTableName="entite_administrative"
              baseColumnNames="entite_administrative_type_id"
              referencedTableName="entite_administrative_type"
              referencedColumnNames="id"
              constraintName="fk_entite_administrative_entite_administrative_type"/>
      <addForeignKeyConstraint
              baseTableName="entite_administrative"
              baseColumnNames="abonne_id"
              referencedTableName="abonne"
              referencedColumnNames="id"
              constraintName="fk_entite_administrative_abonne"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="entite_administrative_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/user/EntiteAdministrative.csv"
            tableName="entite_administrative">
      <column name="id" type="NUMERIC"/>
          <column name="code" type="STRING"/>
          <column name="description" type="STRING"/>
          <column name="libelle" type="STRING"/>
        <column name="chef" type="BIGINT"/>
        <column name="entite_administrative_type" type="BIGINT"/>
        <column name="abonne" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
